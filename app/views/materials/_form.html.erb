<%= form_with(model: material) do |form| %>
<% if material.errors.any? %>
<div id="error_explanation" class="bg-red-50 p-6 rounded text-red-800">
  <h2 class="text-lg font-semibold mb-3"><%= pluralize(material.errors.count, "error") %> prohibited this material from being saved:</h2>

  <ul class="list-disc leading-relaxed">
    <% material.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

  <div class="mb-6">
        <%= form.label :name, class: label_class %>
          <%= form.text_field :name, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :quantity, class: label_class %>
          <%= form.number_field :quantity, class: input_class %>
      </div>

<%= form.submit class: button_class(theme: 'primary') %>

<% if material.persisted? %>
<%= link_to "Cancel", material, class: "text-neutral-700 underline inline-block ml-3" %>
<% else %>
<%= link_to "Cancel", materials_path, class:  "text-neutral-700 underline inline-block ml-3" %>
<% end %>
<% end %>
